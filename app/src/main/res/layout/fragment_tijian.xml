<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.myapplication.TijianFragment"
    android:orientation="vertical"
    android:id="@+id/tihuan">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fg_analyze"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人体检"
            android:textColor="@color/white"
            android:background="@color/qqBlue"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/background5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:rb_color="#0099CC"
                app:rb_duration="3000"
                app:rb_radius="35dp"
                app:rb_rippleAmount="4"
                app:rb_scale="6">

                <Button
                    android:id="@+id/show"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape2"
                    android:text="一键体检"
                    android:textColor="@color/light_blue"
                    android:textSize="13pt" />
            </com.skyfishjy.library.RippleBackground>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccccff"/>

         <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

        <Button
            android:id="@+id/start_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/ssjc_642"
            android:gravity="center"
            android:text="开启实时监测" />
        <Button
            android:id="@+id/write"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/sdsr"
            android:text="手动输入分析" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp">


        <Button
            android:id="@+id/ask_doctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/doctor_64"
            android:gravity="center"
            android:text="马上咨询医生" />
        <Button
            android:id="@+id/ask_forhelp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/jiuhuche_64"
            android:text="寻求紧急救护" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/start_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/map"
            android:gravity="center"
            android:text="开启定位导航" />
        <Button
            android:id="@+id/kaiguan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/selector_tijian"
            android:button="@null"
            android:drawableTop="@drawable/kaiqi"
            android:text="传感器系统已开启" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccccff"/>


</LinearLayout>
